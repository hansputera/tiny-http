{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true
    },
    "exclude": ["node_modules", "lib/tests/*.ts"],
    "include": ["lib/**/*.ts"]
}