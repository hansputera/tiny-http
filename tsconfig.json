{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "removeComments": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "exclude": ["node_modules", "lib/tests/*.ts"],
    "include": ["lib/**/*.ts"]
}